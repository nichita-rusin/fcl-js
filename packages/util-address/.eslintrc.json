{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true,
    "node": true
  },
  "extends": [
    "plugin:jsdoc/recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": [
    "jsdoc",
    "@typescript-eslint"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": ["**/dist/"],
  "rules": {
    "jsdoc/require-jsdoc": [
      "error",
      {
        "publicOnly": true
      }
    ]
  }
}