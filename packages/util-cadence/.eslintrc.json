{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true,
    "node": true
  },
  "extends": [
    "plugin:jsdoc/recommended"
  ],
  "plugins": [
    "jsdoc"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": ["**/dist/"],
  "rules": {
    "jsdoc/require-jsdoc": [
      "error",
      {
        "publicOnly": true
      }
    ],
    "jsdoc/tag-lines": 0
  }
}